<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="titulacion.sise.canchala10.fragments.CampoFragment"
    android:orientation="vertical"
    android:paddingLeft="20sp"
    android:paddingRight="20sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sede"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/tvSede"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Implementos : "
            android:drawableLeft="@drawable/ic_soccer"
            android:drawablePadding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Implementos"
            android:drawablePadding="10dp"
            android:id="@+id/tvImplementos"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Vestidores: "
            android:drawableLeft="@drawable/ic_medal"
            android:drawablePadding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vestidores"
            android:drawablePadding="10dp"
            android:id="@+id/tvVestidores"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Estacionamiento: "
            android:drawableLeft="@drawable/ic_car"
            android:drawablePadding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vestidores"
            android:drawablePadding="10dp"
            android:id="@+id/tvEstacionamiento"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Snack: "
            android:drawableLeft="@drawable/ic_snack"
            android:drawablePadding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vestidores"
            android:drawablePadding="10dp"
            android:id="@+id/tvSnack"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:id="@+id/tvFecha"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:gravity="center"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerCampo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"/>

</LinearLayout>
